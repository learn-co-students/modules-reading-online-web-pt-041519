require_relative "../lib/kid.rb"
require_relative "../lib/dancer.rb"

puts Kid.metadata
puts Dancer.metadata

angelina = Dancer.new("Older Angelina")
puts "Older Angelina says #{angelina.twirl}"
# returns "I'm twirling!"
puts "Older Angelina says #{angelina.jump}"
# returns "Look how high I'm jumping!"
 
buster = Kid.new("Buster")
puts "Buster says #{buster.jump}"
# returns "Look how high I'm jumping!"
puts "Buster says #{buster.take_a_bow}"
# returns "Thank you, thank you. It was a pleasure to dance for you all."